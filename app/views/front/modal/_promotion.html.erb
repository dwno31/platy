
<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="backbutton-float" data-dismiss="modal">
      <span class="glyphicon glyphicon-menu-left"></span>
    </div>
    <div class="modal-body promo-body" style="background:<%=@input_record.background%>;">
      <div class="promo-header" style="background-image:url('<%=@input_record.header_url%>')">

      </div>

      <div class="body-divide">
        <% @product1.each do |record| %>
            <a href="<%=record.url%>" onclick="ga('send','event','shop-popup','outlink','<%=record.id%>');">
              <div class="modal-product-item">
                <img class="modal-product-img" src="<%=record.img_url%>" onerror="imgError(this,'product',<%= record.id%>)"/>
            </a>
            <% if !@userlikeitems.include?(record.id)%>
                <div class="likebutton-item" onclick="userlike(this,'item','<%= record.id%>');ga('send','event','shop-popup','like','<%=record.id%>');"></div>
            <% else %>
                <div class="likebutton-item likebutton-item-clicked" onclick="userlike(this,'item','<%= record.id%>');ga('send','event','shop-popup','like','<%=record.id%>');"></div>
            <% end %>
            <a href="<%=record.url%>" onclick="ga('send','event','shop-popup','outlink','<%=record.id%>');">
              <div class="modal-product-detail">
                <span><%=record.title%></span><br>
                <span class="product-price"><%=record.price.to_s.reverse.scan(/(?:\d*\.)?\d{1,3}-?/).join(',').reverse!%>원</span>
                <span></span>
              </div>
            </div>
            </a>
        <% end %>
        </div>
    <div class="body-divide">
      <% @product2.each do |record| %>
          <a href="<%=record.url%>" onclick="ga('send','event','shop-popup','outlink','<%=record.id%>');">
            <div class="modal-product-item">
              <img class="modal-product-img" src="<%=record.img_url%>" onerror="imgError(this,'product',<%= record.id%>)"/>
          </a>
          <% if !@userlikeitems.include?(record.id)%>
              <div class="likebutton-item" onclick="userlike(this,'item','<%= record.id%>');ga('send','event','shop-popup','like','<%=record.id%>');"></div>
          <% else %>
              <div class="likebutton-item likebutton-item-clicked" onclick="userlike(this,'item','<%= record.id%>');ga('send','event','shop-popup','like','<%=record.id%>');"></div>
          <% end %>
          <a href="<%=record.url%>" onclick="ga('send','event','shop-popup','outlink','<%=record.id%>');">
            <div class="modal-product-detail">
              <span><%=record.title%></span><br>
              <span class="product-price"><%=record.price.to_s.reverse.scan(/(?:\d*\.)?\d{1,3}-?/).join(',').reverse!%>원</span>
            </div>
          </div>
          </a>
      <% end %>
      </div>
      <div style="height:1vh;"></div>

    </div>
  </div>
</div>

